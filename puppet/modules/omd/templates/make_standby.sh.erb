printfcmd="/usr/bin/printf"
commandfile="$OMD_ROOT/tmp/run/<%= core %>.cmd"
statefile="$OMD_ROOT/tmp/run/<%=core %>_state.run"
datetime=`date +%s`

$printfcmd "[%i] STOP_EXECUTING_SVC_CHECKS\n" $datetime >> $commandfile
$printfcmd "[%i] STOP_EXECUTING_HOST_CHECKS\n" $datetime >> $commandfile
$printfcmd "[%i] DISABLE_NOTIFICATIONS;%i\n" $datetime $datetime >> $commandfile
$printfcmd "STANDBY" >> $statefile

